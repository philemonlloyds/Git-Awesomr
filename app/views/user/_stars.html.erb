<% unless @stars_ach_url_1 %>
  <br>You have <%= @stars_all %> stars, you need 1 to unlock level 1.
<% end %>

<% if @stars_ach_url_1 %>
  <img src="/images/outline_wizard.png" alt="Lvl. 1" class="img-achievement-1">
  <% unless @stars_ach_url_2 %>
    <br>You have <%= @stars_all %> total stars, you need 3 to unlock level 2.
  <% end %>
<% end %>

<% if @stars_ach_url_2 %>
  <img src="/images/solid_wizard.png" alt="Lvl. 2" class="img-achievement-2">
  <% unless @stars_ach_url_3 %>
    <br>You have <%= @stars_all %> total stars, you need 5 to unlock level 3.
  <% end %>
<% end %>

<% if @stars_ach_url_3 %>
  <img src="/images/flat_wizard.png" alt="Lvl. 3" class="img-achievement-3">
  <br>You have <%= @stars_all %> total stars.
<% end %>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: <%= if @progress_bar_stars.to_i > 100 then 100 else @progress_bar_stars.to_i end %>%; min-width: 2em;">
    <%= if @progress_bar_stars.to_i > 100 then 100 else @progress_bar_stars.to_i end %>%
 </div>
</div>